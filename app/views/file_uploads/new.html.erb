<h1>Upload a New File</h1>

<%= form_with model: @file_upload, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :file_uploaded %>
    <%= form.file_field :file_uploaded, class: "form-control" %>
  </div>

  <%= form.submit "Upload", class: "btn btn-primary" %>
<% end %>